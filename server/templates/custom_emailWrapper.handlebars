<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="initial-scale=1.0">    <!-- So that mobile webkit will display zoomed in -->
    <meta name="format-detection" content="telephone=no"> <!-- disable auto telephone linking in iOS -->

    <title>{{siteName}}</title>
    <style type="text/css">

        /* Resets: see reset.css for details */
        .ReadMsgBody { width: 100%; background-color: #ebebeb;}
        .ExternalClass {width: 100%; background-color: #ebebeb;}
        .ExternalClass, .ExternalClass p, .ExternalClass span, .ExternalClass font, .ExternalClass td, .ExternalClass div {line-height:100%;}

        body {
          -webkit-text-size-adjust: none;
          -ms-text-size-adjust: none;
          margin: 0;
          padding: 0;
        }

        table {
          border-spacing: 0;
        }

        table td {
          border-collapse: collapse;
        }

        .yshortcuts a {
          border-bottom: none !important;
        }

        a {
          color: {{accentColor}};
          font-weight: bold;
          text-decoration: none;
        }

        .wrapper {
          padding: 20px;
        }

        .container {
          border-radius: 3px;
          max-width: 600px;
        }

        .heading-container {
          padding: 20px;
          text-align: center;
          color: white;
          background-color: {{accentColor}};
        }

        .heading-container a {
          text-align: center;
          color: white;
          font-family: "Avenir Next", "Avenir", Helvetica, sans-serif;
          font-weight: 700;
          font-size: 20px;
          letter-spacing: 3px;
        }

        .heading-container,
        .logo {
          text-align: center;
          color: white;
          font-family: "Avenir Next", "Avenir", Helvetica, sans-serif;
          font-weight: bold;
          font-size: 20px;
        }

        .main-container {
          line-height: 1.5;
          background: white;
          padding: 30px;
          font-size: 15px;
          font-family: "Avenir Next", "Avenir", Helvetica, sans-serif;
          font-weight: 500;
          color: #555;
        }

        .heading {
          font-weight: bold;
          font-size: 18px;
          line-height: 1.5;
          margin: 0;
          display: block;
        }

        .footer-container {
          background-color: #ebebeb;
          text-decoration: underline;
          font-family: "Avenir Next", "Avenir", Helvetica, sans-serif;
          padding: 30px;
          font-size: 13px;
          text-align: center;
          color: {{buttonColor}};
        }

        .post-thumbnail {
          width: 100px;
          border-radius: 3px;
          margin-bottom: 20px;
        }

        .post-body,
        .comment-body {
          border-top: 1px solid #ddd;
          border-bottom: 1px solid #ddd;
          padding: 10px 0;
        }

        .post-body img,
        .post-body-excerpt img {
          max-width: 600px;
          width: 100%;
        }

        .post-cta {
          font-size: 18px;
          margin-bottom: 10px;
          display: block;
        }

        .title {
          font-family: "Avenir", Helvetica, sans-serif;
          font-size: 24px;
          font-weight: bold;
          display: block;
          line-height: 1.2;
        }

        .button {
          background: #F1592A;
          border-radius: 3px;
          color: white;
          display: block;
          font-family: "Avenir", Helvetica, sans-serif;
          font-weight: bold;
          padding: 20px 0;
          text-align: center;
          text-decoration: none;
          width: 100%;
        }

        .align-center {
          text-align: center;
        }

        .notification-type {
          color: #777;
          display: block;
          font-family: "Avenir", Helvetica, sans-serif;
          margin: 15px 0;
        }
    </style>

</head>
<body style="margin:0; padding:10px 0;" bgcolor="#ebebeb" leftmargin="0" topmargin="0" marginwidth="0" marginheight="0">

<br>

<!-- 100% wrapper (grey background) -->
<table border="0" width="100%" height="100%" cellpadding="0" cellspacing="0" bgcolor="#ebebeb">
  <tr>
    <td class="wrapper" align="center" valign="top" bgcolor="#ebebeb" style="background-color: #ebebeb;">

      <!-- 600px container (white background) -->
      <table border="0" cellpadding="0" cellspacing="0" class="container" bgcolor="#ffffff">
        <tr>
          <td class="heading-container">
            <a href="{{siteUrl}}">
              {{#if logoUrl}}
                <img class="logo" src="{{logoUrl}}" alt="{{siteName}}"/>
              {{else}}
                {{siteName}}
              {{/if}}
            </a>
          </td>
        </tr>
        <tr>
          <td class="main-container container-padding" bgcolor="#ffffff">

            {{{body}}}

          </td>
        </tr>
        <tr>
          <td class="footer-container">
            <a href="{{accountLink}}">Change your notifications settings</a><br/><br/>
            {{{footer}}}
          </td>
        </tr>
      </table>
      <!--/600px container -->

    </td>
  </tr>
</table>
<!--/100% wrapper-->
</body>
</html>
